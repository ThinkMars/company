{
  "manifest_version": 3,
  "name": "Free Theme Extension",
  "version": "1.0.0",
  "description": "A magic extension for adjust your theme realtime",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.ts"],
      "css": ["content-style.css"]
    }
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
