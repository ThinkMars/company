{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,

    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "importHelpers": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "__tests__", "types"]
}
