{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
